@model List<Product>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Proudct List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td width="30%">
                            @product.Name
                        </td>
                        <td width="40%">
                            @product.Price
                        </td>
                        <td width="10%">
                            @product.Category.CategoryName
                        </td>
                        <td>
                            <div>
                                <a asp-controller="Product" asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>


    }
    else
    {
        <p>Không tồn tại thể loại trong database</p>
    }


</div>